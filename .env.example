##############################################
# NUNCA COMMITAR ARQUIVOS .env EM REPOSITÓRIO #
##############################################
# Observação: .env e .env.* já estão no .gitignore. 
# Se algum .env foi commitado no passado, remova e rotacione as chaves.

################################
# Supabase (Frontend - público) #
################################
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_FUNCTIONS_ENABLED=true

################################
# Supabase (Backend - privado) #
################################
# Usadas por scripts Node e Edge Functions.
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
# Internal secret used to authorize internal function calls. Use a strong random value in real environments.
INTERNAL_FUNCTION_SECRET=change-me

#########################
# OpenAI / Google (priv) #
#########################
OPENAI_API_KEY=sk-... (substitua)
GOOGLE_API_KEY=AIza... (substitua)

########################################
# Evolution API (WhatsApp) - somente ex. #
########################################
EVOLUTION_API_URL=https://your-evolution-api-instance.com
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_API_SECRET=your-evolution-api-secret
EVOLUTION_API_TOKEN=your-evolution-api-token
EVOLUTION_INSTANCE_ID=your-instance-id
EVOLUTION_WEBHOOK_TOKEN=your-webhook-token

#############################
# Stripe (substitua valores) #
#############################
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
VITE_STRIPE_PUBLIC_KEY=pk_live_...
VITE_STRIPE_PRICE_BASIC=price_...
VITE_STRIPE_PRICE_PREMIUM=price_...
VITE_STRIPE_PRICE_VIP=price_...

#############################
# NEXT / Auth (se aplicável) #
#############################
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=generate-a-strong-secret

########################################
# Variáveis de execução do aplicativo   #
########################################
VITE_APP_BASE_URL=https://your-app.vercel.app
VITE_APP_ENV=production
VITE_DEBUG_MODE=false
VITE_PARTNER_URL=http://localhost:5173
VITE_CLIENT_URL=http://localhost:5173


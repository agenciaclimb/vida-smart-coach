# =====================================================
# VIDA SMART V3.0 - ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your actual values
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION
# Required for all Edge Functions and database access
# =====================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =====================================================
# OPENAI INTEGRATION
# Required for AI coaching functionality
# =====================================================
OPENAI_API_KEY=sk-your_openai_api_key_here

# =====================================================
# EVOLUTION API (WHATSAPP INTEGRATION)
# Required for WhatsApp webhook and messaging
# =====================================================
EVOLUTION_API_URL=https://your-evolution-api-url.com
EVOLUTION_API_KEY=your_evolution_api_key_here
EVOLUTION_INSTANCE_ID=your_instance_id_here

# =====================================================
# GOOGLE OAUTH INTEGRATION
# Required for Google authentication and services
# =====================================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/callback

# =====================================================
# GOOGLE CALENDAR INTEGRATION
# Required for calendar integration features
# =====================================================
GOOGLE_CALENDAR_CLIENT_ID=your_calendar_client_id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your_calendar_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=https://your-domain.com/auth/calendar/callback

# =====================================================
# CORS CONFIGURATION
# Allowed origins for Edge Functions
# =====================================================
CORS_ORIGINS=https://appvidasmart.com.br,https://cliente.appvidasmart.com.br,https://parceiro.appvidasmart.com.br,https://admin.appvidasmart.com.br

# =====================================================
# DEVELOPMENT SETTINGS
# Local development configuration
# =====================================================
# Uncomment for local development
# SUPABASE_URL=http://localhost:54321
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =====================================================
# PRODUCTION SETTINGS
# Production environment configuration
# =====================================================
NODE_ENV=production
LOG_LEVEL=info

# =====================================================
# SECURITY SETTINGS
# Additional security configuration
# =====================================================
JWT_SECRET=your_jwt_secret_here
WEBHOOK_SECRET=your_webhook_secret_here

# =====================================================
# MONITORING AND LOGGING
# Optional monitoring services
# =====================================================
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key_here

# =====================================================
# USAGE INSTRUCTIONS
# =====================================================
# 1. Copy this file to .env in your project root
# 2. Fill in all required values (remove "your_" prefixes)
# 3. Never commit .env files to version control
# 4. Use different .env files for different environments
# 5. Set these as secrets in your deployment platform

# =====================================================
# REQUIRED VS OPTIONAL
# =====================================================
# REQUIRED for basic functionality:
# - SUPABASE_URL
# - SUPABASE_SERVICE_ROLE_KEY
# - OPENAI_API_KEY
# - EVOLUTION_API_URL
# - EVOLUTION_API_KEY
# - EVOLUTION_INSTANCE_ID

# OPTIONAL for extended features:
# - Google OAuth credentials (for Google login)
# - Google Calendar credentials (for calendar integration)
# - Monitoring service keys (for production monitoring)

# =====================================================
# APP CONFIGURATION
# =====================================================
APP_BASE_URL=https://www.appvidasmart.com
